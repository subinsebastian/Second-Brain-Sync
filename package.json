{
  "name": "second-brain-sync",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bun run sync.ts",
    "dev": "bun --watch sync.ts",
    "build": "bun build --compile --outfile sync sync.ts",
    "daemon": "nohup bun run sync.ts > app.log 2>&1 &",
    "daemon:exe": "nohup ./sync > app.log 2>&1 &",
    "daemon:logs": "tail -f app.log",
    "daemon:ps": "ps aux | grep -E 'sync|bun.*sync.ts' | grep -v grep",
    "daemon:watch": "watch -n 2 \"ps aux | grep -E 'sync|bun.*sync.ts' | grep -v grep\"",
    "daemon:kill": "pkill -f 'bun run sync.ts' || pkill -f './sync'",
    "pm2:start": "pm2 start sync.ts --interpreter bun --name sync",
    "pm2:stop": "pm2 stop sync",
    "pm2:restart": "pm2 restart sync",
    "pm2:logs": "pm2 logs sync",
    "pm2:attach": "pm2 attach sync",
    "pm2:delete": "pm2 delete sync",
    "pm2:status": "pm2 list",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md}": "prettier --write"
  }
}
